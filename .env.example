# Example environment file (safe to commit)
# Copy to .env and fill secrets. Never commit real secrets.

MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.example.mongodb.net/store?retryWrites=true&w=majority
JWT_SECRET=replace_with_strong_random
PORT=5000

# Public base (desktop web build)
VITE_API_BASE=https://api.yourdomain.com
VITE_API_URL=https://api.yourdomain.com
EXPO_PUBLIC_API_URL=https://api.yourdomain.com

# Cloudinary (public parts)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_API_KEY=your_public_api_key
VITE_CLOUDINARY_UPLOAD_PRESET=your_unsigned_preset
# Private (do not prefix with VITE_)
CLOUDINARY_API_KEY=your_private_key
CLOUDINARY_API_SECRET=your_private_secret

# Delivery hub (optional)
# DELIVERY_HUB_BASE_URL=https://delivery-hub.example.com/api
# DELIVERY_HUB_API_KEY=xxxxx

# Tablet policy: desktop | mobile | ignore
MOBILE_WEB_TABLET_POLICY=desktop

# Optional external mobile site
# MOBILE_WEB_EXTERNAL_URL=https://m.yourdomain.com

# Push keys (public key ok, private stay private)
VAPID_PUBLIC_KEY=REPLACE_PUBLIC_KEY
VAPID_PRIVATE_KEY=REPLACE_PRIVATE_KEY
VAPID_SUBJECT=mailto:admin@example.com

NODE_ENV=development
DELIVERY_ADMIN_BYPASS=true
DEV_DELIVERY_NO_AUTH=true
